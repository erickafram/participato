<%- include('layouts/main', { body: `
<!-- Banner Topo Categoria -->
${banners && banners.category_top && banners.category_top.length > 0 ? `
<div class="banner-area banner-top">
  <div class="container">
    ${banners.category_top.map(b => '<a href="' + (b.link || '#') + '" target="' + b.target + '" class="banner-link" data-banner-id="' + b.id + '"><img src="' + b.image + '" alt="' + (b.alt_text || b.title) + '" class="banner-img banner-' + b.size + '"></a>').join('')}
  </div>
</div>
` : ''}

<!-- Header da Categoria -->
<section class="py-5" style="background: linear-gradient(135deg, ${category.color} 0%, ${category.color}dd 100%); color: #fff;">
  <div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" class="text-white opacity-75 text-decoration-none">Início</a></li>
        <li class="breadcrumb-item text-white opacity-75">Categorias</li>
        <li class="breadcrumb-item active text-white" aria-current="page">${category.name}</li>
      </ol>
    </nav>
    
    <div class="d-flex align-items-center gap-4">
      <div class="bg-white text-dark rounded-circle d-flex align-items-center justify-content-center shadow-lg" style="width: 80px; height: 80px;">
        <i class="${category.icon || 'bi bi-folder'} fs-1" style="color: ${category.color};"></i>
      </div>
      <div>
        <h1 class="display-5 fw-bold mb-2">${category.name}</h1>
        <p class="lead mb-0 opacity-90">${category.description || 'Notícias e atualizações sobre ' + category.name}</p>
      </div>
    </div>
  </div>
</section>

<div class="container py-5">
  <div class="row g-5">
    <!-- Main Content -->
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
        <h5 class="fw-bold text-dark mb-0">
          <i class="bi bi-grid-fill me-2 text-muted"></i>
          ${pagination.total} publicações
        </h5>
      </div>
      
      <!-- Posts Grid -->
      <div class="row g-4">
        ${posts && posts.length > 0 
          ? posts.map(post => `
            <div class="col-md-6">
              <article class="card h-100 border-0 shadow-sm hover-shadow transition">
                <div class="position-relative overflow-hidden rounded-top-4">
                  <a href="/noticia/${post.slug}">
                    <img src="${post.featured_image || '/images/placeholder.jpg'}" class="card-img-top" alt="${post.title}" style="height: 240px; transition: transform 0.5s;">
                  </a>
                </div>
                <div class="card-body p-4">
                  <h5 class="card-title fw-bold mb-3">
                    <a href="/noticia/${post.slug}" class="text-dark text-decoration-none stretched-link">${post.title}</a>
                  </h5>
                  <p class="card-text text-muted small mb-3">${post.excerpt ? post.excerpt.substring(0, 100) + '...' : ''}</p>
                  <div class="d-flex align-items-center justify-content-between pt-3 border-top border-light mt-auto">
                    <div class="d-flex align-items-center gap-2">
                      ${post.author && post.author.avatar 
                        ? '<img src="' + post.author.avatar + '" class="rounded-circle" width="24" height="24">' 
                        : '<div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;"><i class="bi bi-person text-muted small"></i></div>'
                      }
                      <span class="small fw-medium text-muted">${post.author ? post.author.name.split(' ')[0] : 'Admin'}</span>
                    </div>
                    <small class="text-muted"><i class="bi bi-calendar3 me-1"></i>${new Date(post.published_at || post.created_at).toLocaleDateString('pt-BR')}</small>
                  </div>
                </div>
              </article>
            </div>
          `).join('')
          : '<div class="col-12"><div class="alert alert-light text-center py-5 border rounded-4"><i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i><h5 class="fw-bold text-muted">Nenhuma notícia encontrada</h5><p class="text-muted mb-0">Tente voltar mais tarde para conferir as novidades.</p></div></div>'
        }
      </div>
      
      <!-- Pagination -->
      ${pagination.totalPages > 1 ? `
        <nav class="mt-5">
          <ul class="pagination justify-content-center gap-2">
            ${pagination.hasPrev ? '<li class="page-item"><a class="page-link rounded-circle shadow-sm border-0 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" href="?page=' + (pagination.page - 1) + '"><i class="bi bi-chevron-left"></i></a></li>' : ''}
            ${Array.from({length: Math.min(5, pagination.totalPages)}, (_, i) => {
              let pageNum = pagination.page - 2 + i;
              if (pageNum < 1) pageNum = i + 1;
              if (pageNum > pagination.totalPages) return '';
              return '<li class="page-item' + (pageNum === pagination.page ? ' active' : '') + '"><a class="page-link rounded-circle shadow-sm border-0 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" href="?page=' + pageNum + '">' + pageNum + '</a></li>';
            }).join('')}
            ${pagination.hasNext ? '<li class="page-item"><a class="page-link rounded-circle shadow-sm border-0 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" href="?page=' + (pagination.page + 1) + '"><i class="bi bi-chevron-right"></i></a></li>' : ''}
          </ul>
        </nav>
      ` : ''}
    </div>
    
    <!-- Sidebar -->
    <div class="col-lg-4">
      <div class="position-sticky" style="top: 100px;">
        <!-- Banner Sidebar Categoria -->
        ${banners && banners.category_sidebar && banners.category_sidebar.length > 0 ? `
        <div class="sidebar-widget mb-4 p-0">
          ${banners.category_sidebar.map(b => '<a href="' + (b.link || '#') + '" target="' + b.target + '" class="banner-link" data-banner-id="' + b.id + '"><img src="' + b.image + '" alt="' + (b.alt_text || b.title) + '" class="banner-img w-100 rounded-3"></a>').join('')}
        </div>
        ` : ''}
        
        <!-- Search Widget -->
        <div class="sidebar-widget mb-4">
          <form action="/busca" method="GET">
            <div class="input-group">
              <input type="text" name="q" class="form-control bg-light border-0" placeholder="Buscar no site...">
              <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
            </div>
          </form>
        </div>

        <!-- Categories Widget -->
        <div class="sidebar-widget mb-4">
          <h5 class="widget-title mb-3">Categorias</h5>
          <div class="d-flex flex-column gap-2">
            ${categories.map(cat => `
              <a href="/categoria/${cat.slug}" class="d-flex align-items-center justify-content-between p-2 rounded-3 text-decoration-none transition ${cat.id === category.id ? 'bg-primary text-white shadow-sm' : 'text-dark hover-bg-light'}">
                <div class="d-flex align-items-center gap-2">
                  <i class="${cat.icon || 'bi bi-folder'} ${cat.id === category.id ? 'text-white' : 'text-primary'}"></i>
                  <span class="fw-medium">${cat.name}</span>
                </div>
                <span class="badge ${cat.id === category.id ? 'bg-white text-primary' : 'bg-light text-dark'} rounded-pill">${cat.postCount || 0}</span>
              </a>
            `).join('')}
          </div>
        </div>
        
        <!-- Newsletter Widget -->
        <div class="card bg-dark text-white border-0 overflow-hidden">
          <div class="card-body p-4 text-center position-relative">
            <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(45deg, var(--primary-color) 0%, transparent 100%); opacity: 0.2;"></div>
            <i class="bi bi-envelope-open fs-1 mb-3 d-block text-primary"></i>
            <h5 class="fw-bold mb-2">Newsletter</h5>
            <p class="small text-white-50 mb-3">Inscreva-se para receber as melhores notícias.</p>
            <form>
              <input type="email" class="form-control form-control-sm mb-2" placeholder="Seu email">
              <button class="btn btn-primary btn-sm w-100 fw-bold">Inscrever-se</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Banner Rodapé Categoria -->
${banners && banners.category_bottom && banners.category_bottom.length > 0 ? `
<div class="banner-area banner-top">
  <div class="container">
    ${banners.category_bottom.map(b => '<a href="' + (b.link || '#') + '" target="' + b.target + '" class="banner-link" data-banner-id="' + b.id + '"><img src="' + b.image + '" alt="' + (b.alt_text || b.title) + '" class="banner-img banner-' + b.size + '"></a>').join('')}
  </div>
</div>
` : ''}

<style>
.hover-shadow:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
}
.hover-bg-light:hover {
  background-color: #f8f9fa;
}
.transition {
  transition: all 0.3s ease;
}
.card-img-top:hover {
  transform: scale(1.05);
}
</style>
`}) %>
