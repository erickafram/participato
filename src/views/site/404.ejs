<%- include('layouts/header') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 text-center">
      <div class="card p-5">
        <div class="mb-4">
          <span style="font-size: 120px; font-weight: 800; color: var(--primary-color); line-height: 1;">404</span>
        </div>
        <h1 class="h3 mb-3">Página não encontrada</h1>
        <p class="text-muted mb-4">
          Desculpe, a página que você está procurando não existe ou foi movida.
        </p>
        <div class="d-flex gap-3 justify-content-center flex-wrap">
          <a href="/" class="btn btn-primary">
            <i class="bi bi-house-door me-2"></i>Voltar ao Início
          </a>
          <a href="/noticias" class="btn btn-outline-primary">
            <i class="bi bi-newspaper me-2"></i>Ver Notícias
          </a>
        </div>
        
        <hr class="my-4">
        
        <p class="text-muted mb-3">Ou tente buscar o que procura:</p>
        <form action="/busca" method="GET">
          <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Buscar...">
            <button class="btn btn-primary" type="submit">
              <i class="bi bi-search"></i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footer') %>
