<%- include('../layouts/main', { body: `
<!-- Breadcrumb -->
<section class="breadcrumb-section">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door"></i> Início</a></li>
        <li class="breadcrumb-item active">${page.title}</li>
      </ol>
    </nav>
  </div>
</section>

<div class="container py-4">
  <div class="row">
    <div class="col-lg-8">
      <article class="card">
        ${page.featured_image ? '<img src="' + page.featured_image + '" class="card-img-top" alt="' + page.title + '" style="height: 300px; object-fit: cover;">' : ''}
        <div class="card-body p-4 p-md-5">
          <h1 class="card-title mb-4">${page.title}</h1>
          <div class="page-content">
            ${page.content || '<p class="text-muted">Esta página não possui conteúdo.</p>'}
          </div>
        </div>
      </article>
    </div>
    
    <!-- Sidebar -->
    <div class="col-lg-4">
      <div class="sidebar-widget">
        <h4 class="widget-title">Páginas</h4>
        <ul class="category-list">
          ${menuPages.map(p => `
            <li>
              <a href="/pagina/${p.slug}" ${p.id === page.id ? 'style="background: var(--primary-light); color: var(--primary-color);"' : ''}>
                <span><i class="bi bi-file-earmark me-2"></i>${p.title}</span>
              </a>
            </li>
          `).join('')}
        </ul>
      </div>
      
      <div class="sidebar-widget">
        <h4 class="widget-title">Categorias</h4>
        <ul class="category-list">
          ${categories.map(cat => `
            <li>
              <a href="/categoria/${cat.slug}">
                <span><i class="${cat.icon || 'bi bi-folder'} me-2" style="color: ${cat.color}"></i>${cat.name}</span>
              </a>
            </li>
          `).join('')}
        </ul>
      </div>
    </div>
  </div>
</div>

<style>
.page-content {
  font-size: 17px;
  line-height: 1.8;
  color: #334155;
}

.page-content h2, .page-content h3, .page-content h4 {
  margin-top: 30px;
  margin-bottom: 15px;
  font-weight: 700;
}

.page-content p {
  margin-bottom: 20px;
}

.page-content ul, .page-content ol {
  margin-bottom: 20px;
  padding-left: 25px;
}

.page-content li {
  margin-bottom: 8px;
}
</style>
`}) %>
