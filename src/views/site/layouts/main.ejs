          <span>Início</span>
        </a>
      </div>
      
      <% categories.forEach(cat => { %>
        <% const hasSubcats = (cat.subcategories && cat.subcategories.length > 0) || (cat.children && cat.children.length > 0); %>
        <% if (hasSubcats) { %>
          <div class="mobile-nav-item">
            <a href="javascript:void(0)" class="mobile-nav-link" onclick="toggleSubmenu(this)">
