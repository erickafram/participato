  </main>
  
  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <div class="row gy-5">
        <div class="col-lg-4">
          <div class="footer-widget">
            <a href="/" class="site-logo text-white mb-4 d-inline-block">
              <i class="bi bi-lightning-charge-fill"></i>
              <div><span>Portal</span>Convictos</div>
            </a>
            <p class="mb-4 opacity-75" style="line-height: 1.8;">
              <%= settings && settings.site_description ? settings.site_description : 'Seu portal de notícias e entretenimento com conteúdo de qualidade e atualizações diárias.' %>
            </p>
            <div class="d-flex">
              <% if (settings && settings.social_facebook) { %><a href="<%= settings.social_facebook %>" class="social-btn"><i class="bi bi-facebook"></i></a><% } %>
              <% if (settings && settings.social_instagram) { %><a href="<%= settings.social_instagram %>" class="social-btn"><i class="bi bi-instagram"></i></a><% } %>
              <% if (settings && settings.social_twitter) { %><a href="<%= settings.social_twitter %>" class="social-btn"><i class="bi bi-twitter-x"></i></a><% } %>
              <% if (settings && settings.social_youtube) { %><a href="<%= settings.social_youtube %>" class="social-btn"><i class="bi bi-youtube"></i></a><% } %>
            </div>
          </div>
        </div>
        
        <div class="col-lg-2 col-6">
          <div class="footer-widget">
            <h5>Categorias</h5>
            <ul class="list-unstyled">
              <% if (typeof categories !== 'undefined' && categories) { categories.slice(0, 5).forEach(cat => { %>
                <li><a href="/categoria/<%= cat.slug %>" class="footer-link"><%= cat.name %></a></li>
              <% }) } %>
            </ul>
          </div>
        </div>
        
        <div class="col-lg-2 col-6">
          <div class="footer-widget">
            <h5>Institucional</h5>
            <ul class="list-unstyled">
              <li><a href="/" class="footer-link">Início</a></li>
              <li><a href="/noticias" class="footer-link">Notícias</a></li>
              <li><a href="/pagina/sobre" class="footer-link">Sobre Nós</a></li>
              <li><a href="/pagina/contato" class="footer-link">Contato</a></li>
            </ul>
          </div>
        </div>
        
        <div class="col-lg-4">
          <div class="footer-widget">
            <h5>Contato</h5>
            <ul class="list-unstyled opacity-75">
              <% if (settings && settings.contact_email) { %>
                <li class="mb-3 d-flex gap-3">
                  <i class="bi bi-envelope text-primary"></i>
                  <span><%= settings.contact_email %></span>
                </li>
              <% } %>
              <% if (settings && settings.contact_phone) { %>
                <li class="mb-3 d-flex gap-3">
                  <i class="bi bi-telephone text-primary"></i>
                  <span><%= settings.contact_phone %></span>
                </li>
              <% } %>
              <% if (settings && settings.contact_address) { %>
                <li class="d-flex gap-3">
                  <i class="bi bi-geo-alt text-primary"></i>
                  <span><%= settings.contact_address %></span>
                </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
            <p class="mb-0"><%= settings && settings.footer_text ? settings.footer_text : '© ' + (typeof currentYear !== 'undefined' ? currentYear : new Date().getFullYear()) + ' Portal Convictos. Todos os direitos reservados.' %></p>
          </div>
          <div class="col-md-6 text-center text-md-end">
            <a href="/pagina/politica-de-privacidade" class="text-white-50 me-3 small">Privacidade</a>
            <a href="/pagina/termos-de-uso" class="text-white-50 small">Termos de Uso</a>
          </div>
        </div>
      </div>
    </div>
  </footer>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
