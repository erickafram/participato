<%- include('../layouts/main', { body: `
<div class="page-header">
  <h1><i class="bi bi-person me-2"></i>${isEdit ? 'Editar Usuário' : 'Novo Usuário'}</h1>
  <a href="/admin/users" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left me-1"></i>Voltar
  </a>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-body">
        <form action="${isEdit ? '/admin/users/' + userData.id : '/admin/users'}" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Nome <span class="text-danger">*</span></label>
              <input type="text" name="name" class="form-control" value="${userData ? userData.name : ''}" required placeholder="Nome completo">
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Email <span class="text-danger">*</span></label>
              <input type="email" name="email" class="form-control" value="${userData ? userData.email : ''}" required placeholder="email@exemplo.com">
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Senha ${isEdit ? '' : '<span class="text-danger">*</span>'}</label>
              <input type="password" name="password" class="form-control" ${isEdit ? '' : 'required'} placeholder="${isEdit ? 'Deixe em branco para manter' : 'Mínimo 6 caracteres'}">
              ${isEdit ? '<small class="text-muted">Deixe em branco para manter a senha atual</small>' : ''}
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Função</label>
              <select name="role" class="form-select">
                <option value="editor"${userData && userData.role === 'editor' ? ' selected' : ''}>Editor</option>
                <option value="admin"${userData && userData.role === 'admin' ? ' selected' : ''}>Administrador</option>
              </select>
            </div>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Biografia</label>
            <textarea name="bio" class="form-control" rows="3" placeholder="Breve descrição sobre o usuário">${userData ? userData.bio || '' : ''}</textarea>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Avatar</label>
            ${userData && userData.avatar ? '<div class="mb-2"><img src="' + userData.avatar + '" alt="" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;"></div>' : ''}
            <input type="file" name="avatar" class="form-control" accept="image/*">
          </div>
          
          <div class="form-check mb-4">
            <input type="checkbox" name="active" class="form-check-input" id="active"${!userData || userData.active ? ' checked' : ''}>
            <label class="form-check-label" for="active">Usuário ativo</label>
          </div>
          
          <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-lg me-1"></i>${isEdit ? 'Atualizar' : 'Criar Usuário'}
            </button>
            <a href="/admin/users" class="btn btn-outline-secondary">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <i class="bi bi-shield-check me-2"></i>Permissões
      </div>
      <div class="card-body">
        <h6 class="text-danger"><i class="bi bi-person-badge me-1"></i>Administrador</h6>
        <ul class="small text-muted mb-3">
          <li>Acesso total ao sistema</li>
          <li>Gerenciar usuários</li>
          <li>Configurações do site</li>
          <li>Todas as permissões de Editor</li>
        </ul>
        
        <h6 class="text-primary"><i class="bi bi-pencil me-1"></i>Editor</h6>
        <ul class="small text-muted mb-0">
          <li>Criar e editar posts</li>
          <li>Gerenciar categorias</li>
          <li>Gerenciar páginas</li>
          <li>Upload de mídia</li>
        </ul>
      </div>
    </div>
  </div>
</div>
`}) %>
