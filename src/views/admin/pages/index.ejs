<%- include('../layouts/main', { body: `
<div class="page-header">
  <div>
    <h1>Páginas</h1>
    <p>Gerencie as páginas estáticas do site</p>
  </div>
  <a href="/admin/pages/create" class="btn-action">
    <i class="bi bi-plus"></i>
    Nova Página
  </a>
</div>

<div class="data-card">
  ${pages && pages.length > 0 
    ? '<div class="data-list">' +
        pages.map(page => 
          '<div class="data-item">' +
            '<div class="item-icon"><i class="bi bi-file-earmark-text"></i></div>' +
            '<div class="item-info">' +
              '<h3>' + page.title + '</h3>' +
              '<span class="item-meta">' +
                '<code>/pagina/' + page.slug + '</code>' +
                (page.author ? ' • ' + page.author.name : '') +
                ' • Ordem: ' + page.order +
              '</span>' +
            '</div>' +
            '<div class="item-badges">' +
              (page.status === 'published' 
                ? '<span class="badge success">Publicada</span>'
                : '<span class="badge muted">Rascunho</span>'
              ) +
              (page.show_in_menu 
                ? '<span class="badge info"><i class="bi bi-list"></i> Menu</span>'
                : ''
              ) +
            '</div>' +
            '<div class="item-actions">' +
              '<a href="/admin/pages/' + page.id + '/edit" class="btn-icon" title="Editar"><i class="bi bi-pencil"></i></a>' +
              '<a href="/pagina/' + page.slug + '" target="_blank" class="btn-icon" title="Ver"><i class="bi bi-eye"></i></a>' +
              '<button type="button" class="btn-icon danger" onclick="deleteItem(' + page.id + ')" title="Excluir"><i class="bi bi-trash"></i></button>' +
            '</div>' +
          '</div>'
        ).join('') +
      '</div>'
    : '<div class="empty-state">' +
        '<i class="bi bi-file-earmark"></i>' +
        '<h3>Nenhuma página</h3>' +
        '<p>Crie páginas como Sobre, Contato, etc.</p>' +
        '<a href="/admin/pages/create" class="btn-action"><i class="bi bi-plus"></i> Nova Página</a>' +
      '</div>'
  }
</div>

<form id="deleteForm" method="POST" style="display: none;"></form>

<style>
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24px;
}
.page-header h1 {
  font-size: 22px;
  font-weight: 700;
  color: #0f172a;
  margin: 0 0 4px;
}
.page-header p {
  font-size: 13px;
  color: #64748b;
  margin: 0;
}
.btn-action {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 18px;
  background: #3b82f6;
  color: #fff;
  border-radius: 8px;
  font-size: 13px;
  font-weight: 600;
  text-decoration: none;
  transition: background 0.2s;
}
.btn-action:hover {
  background: #2563eb;
  color: #fff;
}

.data-card {
  background: #fff;
  border-radius: 12px;
}
.data-list {
  display: flex;
  flex-direction: column;
}
.data-item {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 16px 20px;
  border-bottom: 1px solid #f1f5f9;
  transition: background 0.2s;
}
.data-item:last-child {
  border-bottom: none;
}
.data-item:hover {
  background: #f8fafc;
}
.item-icon {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #64748b;
  font-size: 18px;
  flex-shrink: 0;
}
.item-info {
  flex: 1;
  min-width: 0;
}
.item-info h3 {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  margin: 0 0 4px;
}
.item-meta {
  font-size: 12px;
  color: #64748b;
}
.item-meta code {
  background: #f1f5f9;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 11px;
}
.item-badges {
  display: flex;
  gap: 6px;
  flex-shrink: 0;
}
.badge {
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 4px;
}
.badge.success {
  background: #dcfce7;
  color: #16a34a;
}
.badge.muted {
  background: #f1f5f9;
  color: #64748b;
}
.badge.info {
  background: #dbeafe;
  color: #2563eb;
}
.item-actions {
  display: flex;
  gap: 4px;
}
.btn-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6px;
  border: 1px solid #e2e8f0;
  background: #fff;
  color: #64748b;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
}
.btn-icon:hover {
  background: #f8fafc;
  color: #0f172a;
}
.btn-icon.danger:hover {
  background: #fef2f2;
  color: #dc2626;
  border-color: #fecaca;
}

.empty-state {
  text-align: center;
  padding: 60px 20px;
}
.empty-state i {
  font-size: 48px;
  color: #cbd5e1;
  margin-bottom: 16px;
}
.empty-state h3 {
  font-size: 16px;
  font-weight: 600;
  color: #475569;
  margin: 0 0 8px;
}
.empty-state p {
  font-size: 13px;
  color: #64748b;
  margin: 0 0 20px;
}

@media (max-width: 640px) {
  .page-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
  }
  .btn-action {
    width: 100%;
    justify-content: center;
  }
  .data-item {
    flex-wrap: wrap;
  }
  .item-badges {
    order: 3;
    width: 100%;
    margin-top: 8px;
  }
}
</style>

<script>
function deleteItem(id) {
  if (confirm('Excluir esta página?')) {
    document.getElementById('deleteForm').action = '/admin/pages/' + id + '/delete';
    document.getElementById('deleteForm').submit();
  }
}
</script>
`}) %>
