<%- include('../layouts/main', { body: `
<div class="page-header">
  <div>
    <h1>Configurações</h1>
    <p>Personalize seu portal</p>
  </div>
</div>

<!-- Logo do Site (fora do form principal) -->
<div class="settings-card logo-card" style="margin-bottom: 20px;">
  <div class="card-header">
    <i class="bi bi-image"></i>
    <span>Logo do Site</span>
  </div>
  <div class="card-body">
    <p class="logo-description">Faça upload da logo principal do seu site. Ela será exibida no cabeçalho.</p>
    
    <div class="logo-preview-area">
      ${groupedSettings.general?.find(s => s.key === 'site_logo')?.value 
        ? '<div class="logo-current">' +
            '<img src="' + groupedSettings.general.find(s => s.key === 'site_logo').value + '" alt="Logo atual">' +
            '<div class="logo-actions">' +
              '<form action="/admin/settings/remove-logo" method="POST" class="logo-remove-form">' +
                '<button type="submit" class="btn-remove-logo" onclick="return confirmRemoveLogo();">' +
                  '<i class="bi bi-trash"></i> Remover' +
                '</button>' +
              '</form>' +
            '</div>' +
          '</div>'
        : '<div class="logo-placeholder">' +
            '<i class="bi bi-image"></i>' +
            '<span>Nenhuma logo definida</span>' +
          '</div>'
      }
    </div>
    
    <form action="/admin/settings/upload-logo" method="POST" enctype="multipart/form-data" class="logo-upload-form">
      <div class="upload-area" id="logoDropArea">
        <input type="file" name="logo" id="logoInput" accept="image/*" hidden>
        <div class="upload-content">
          <i class="bi bi-cloud-arrow-up"></i>
          <span>Arraste uma imagem ou <label for="logoInput" class="upload-link">clique para selecionar</label></span>
          <small>PNG, JPG, SVG ou WebP (máx. 10MB)</small>
        </div>
      </div>
      <div class="upload-preview" id="logoPreview" style="display: none;">
        <img id="logoPreviewImg" src="" alt="Preview">
        <span id="logoFileName"></span>
        <button type="button" class="btn-clear-preview" onclick="clearLogoPreview()">
          <i class="bi bi-x"></i>
        </button>
      </div>
      <button type="submit" class="btn-upload-logo" id="btnUploadLogo" disabled>
        <i class="bi bi-upload"></i> Enviar Logo
      </button>
    </form>
  </div>
</div>

<form action="/admin/settings" method="POST">
  <div class="settings-layout">
    <div class="settings-main">
      <!-- Geral -->
      <div class="settings-card">
        <div class="card-header">
          <i class="bi bi-sliders"></i>
          <span>Geral</span>
        </div>
        <div class="card-body">
          ${groupedSettings.general ? groupedSettings.general.map(s => 
            '<div class="form-group">' +
              '<label>' + (s.label || s.key) + '</label>' +
              (s.type === 'textarea' 
                ? '<textarea name="' + s.key + '" rows="2">' + (s.value || '') + '</textarea>'
                : '<input type="' + (s.type === 'number' ? 'number' : 'text') + '" name="' + s.key + '" value="' + (s.value || '') + '">'
              ) +
              (s.description ? '<small>' + s.description + '</small>' : '') +
            '</div>'
          ).join('') : '<p class="empty">Nenhuma configuração</p>'}
        </div>
      </div>
      
      <!-- Contato -->
      <div class="settings-card">
        <div class="card-header">
          <i class="bi bi-envelope"></i>
          <span>Contato</span>
        </div>
        <div class="card-body">
          ${groupedSettings.contact ? groupedSettings.contact.map(s => 
            '<div class="form-group">' +
              '<label>' + (s.label || s.key) + '</label>' +
              (s.type === 'textarea' 
                ? '<textarea name="' + s.key + '" rows="2">' + (s.value || '') + '</textarea>'
                : '<input type="text" name="' + s.key + '" value="' + (s.value || '') + '">'
              ) +
            '</div>'
          ).join('') : ''}
        </div>
      </div>
      
      <!-- Redes Sociais -->
      <div class="settings-card">
        <div class="card-header">
          <i class="bi bi-share"></i>
          <span>Redes Sociais</span>
        </div>
        <div class="card-body">
          ${groupedSettings.social ? groupedSettings.social.map(s => 
            '<div class="form-group">' +
              '<label>' + (s.label || s.key) + '</label>' +
              '<input type="url" name="' + s.key + '" value="' + (s.value || '') + '" placeholder="https://">' +
            '</div>'
          ).join('') : ''}
        </div>
      </div>
      
      <!-- Posts -->
      <div class="settings-card">
        <div class="card-header">
          <i class="bi bi-file-text"></i>
          <span>Posts</span>
        </div>
        <div class="card-body">
          ${groupedSettings.posts ? groupedSettings.posts.map(s => 
            '<div class="form-group">' +
              '<label>' + (s.label || s.key) + '</label>' +
              '<input type="number" name="' + s.key + '" value="' + (s.value || '') + '" min="1">' +
              (s.description ? '<small>' + s.description + '</small>' : '') +
            '</div>'
          ).join('') : ''}
        </div>
      </div>
      
      <!-- Rodapé -->
      <div class="settings-card">
        <div class="card-header">
          <i class="bi bi-layout-text-window"></i>
          <span>Rodapé</span>
        </div>
        <div class="card-body">
          ${groupedSettings.footer ? groupedSettings.footer.map(s => 
            '<div class="form-group">' +
              '<label>' + (s.label || s.key) + '</label>' +
              '<textarea name="' + s.key + '" rows="2">' + (s.value || '') + '</textarea>' +
            '</div>'
          ).join('') : ''}
        </div>
      </div>
      
      <!-- Paleta de Cores -->
      <div class="settings-card colors-card">
        <div class="card-header">
          <i class="bi bi-palette"></i>
          <span>Paleta de Cores</span>
          <button type="button" class="btn-reset-colors" onclick="resetColors()">
            <i class="bi bi-arrow-counterclockwise"></i> Resetar
          </button>
        </div>
        <div class="card-body">
          <p class="colors-description">Personalize as cores do seu portal. As alterações serão aplicadas em todo o site.</p>
          
          <!-- Cores Principais -->
          <div class="color-section">
            <h4><i class="bi bi-star"></i> Cores Principais</h4>
            <div class="color-grid">
              <div class="color-item">
                <label>Cor Principal</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_primary" value="${groupedSettings.colors?.find(s => s.key === 'color_primary')?.value || '#3b82f6'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_primary')?.value || '#3b82f6'}" class="color-text" data-for="color_primary">
                </div>
              </div>
              <div class="color-item">
                <label>Cor Principal (Hover)</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_primary_dark" value="${groupedSettings.colors?.find(s => s.key === 'color_primary_dark')?.value || '#2563eb'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_primary_dark')?.value || '#2563eb'}" class="color-text" data-for="color_primary_dark">
                </div>
              </div>
              <div class="color-item">
                <label>Cor Secundária</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_secondary" value="${groupedSettings.colors?.find(s => s.key === 'color_secondary')?.value || '#0f172a'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_secondary')?.value || '#0f172a'}" class="color-text" data-for="color_secondary">
                </div>
              </div>
            </div>
          </div>
          
          <!-- Header -->
          <div class="color-section">
            <h4><i class="bi bi-layout-text-window-reverse"></i> Cabeçalho</h4>
            <div class="color-grid">
              <div class="color-item">
                <label>Fundo Barra Superior</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_topbar_bg" value="${groupedSettings.colors?.find(s => s.key === 'color_topbar_bg')?.value || '#0f172a'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_topbar_bg')?.value || '#0f172a'}" class="color-text" data-for="color_topbar_bg">
                </div>
              </div>
              <div class="color-item">
                <label>Texto Barra Superior</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_topbar_text" value="${groupedSettings.colors?.find(s => s.key === 'color_topbar_text')?.value || '#ffffff'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_topbar_text')?.value || '#ffffff'}" class="color-text" data-for="color_topbar_text">
                </div>
              </div>
              <div class="color-item">
                <label>Fundo do Header</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_header_bg" value="${groupedSettings.colors?.find(s => s.key === 'color_header_bg')?.value || '#ffffff'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_header_bg')?.value || '#ffffff'}" class="color-text" data-for="color_header_bg">
                </div>
              </div>
              <div class="color-item">
                <label>Texto do Header</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_header_text" value="${groupedSettings.colors?.find(s => s.key === 'color_header_text')?.value || '#0f172a'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_header_text')?.value || '#0f172a'}" class="color-text" data-for="color_header_text">
                </div>
              </div>
            </div>
          </div>
          
          <!-- Menu -->
          <div class="color-section">
            <h4><i class="bi bi-list"></i> Menu de Navegação</h4>
            <div class="color-grid">
              <div class="color-item">
                <label>Fundo do Menu</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_menu_bg" value="${groupedSettings.colors?.find(s => s.key === 'color_menu_bg')?.value || '#ffffff'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_menu_bg')?.value || '#ffffff'}" class="color-text" data-for="color_menu_bg">
                </div>
              </div>
              <div class="color-item">
                <label>Texto do Menu</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_menu_text" value="${groupedSettings.colors?.find(s => s.key === 'color_menu_text')?.value || '#0f172a'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_menu_text')?.value || '#0f172a'}" class="color-text" data-for="color_menu_text">
                </div>
              </div>
              <div class="color-item">
                <label>Menu Hover/Ativo</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_menu_hover" value="${groupedSettings.colors?.find(s => s.key === 'color_menu_hover')?.value || '#3b82f6'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_menu_hover')?.value || '#3b82f6'}" class="color-text" data-for="color_menu_hover">
                </div>
              </div>
            </div>
          </div>
          
          <!-- Corpo -->
          <div class="color-section">
            <h4><i class="bi bi-file-earmark"></i> Corpo do Site</h4>
            <div class="color-grid">
              <div class="color-item">
                <label>Fundo do Site</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_body_bg" value="${groupedSettings.colors?.find(s => s.key === 'color_body_bg')?.value || '#f8fafc'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_body_bg')?.value || '#f8fafc'}" class="color-text" data-for="color_body_bg">
                </div>
              </div>
              <div class="color-item">
                <label>Fundo dos Cards</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_card_bg" value="${groupedSettings.colors?.find(s => s.key === 'color_card_bg')?.value || '#ffffff'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_card_bg')?.value || '#ffffff'}" class="color-text" data-for="color_card_bg">
                </div>
              </div>
              <div class="color-item">
                <label>Texto Principal</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_text" value="${groupedSettings.colors?.find(s => s.key === 'color_text')?.value || '#0f172a'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_text')?.value || '#0f172a'}" class="color-text" data-for="color_text">
                </div>
              </div>
              <div class="color-item">
                <label>Texto Secundário</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_text_muted" value="${groupedSettings.colors?.find(s => s.key === 'color_text_muted')?.value || '#64748b'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_text_muted')?.value || '#64748b'}" class="color-text" data-for="color_text_muted">
                </div>
              </div>
            </div>
          </div>
          
          <!-- Rodapé -->
          <div class="color-section">
            <h4><i class="bi bi-layout-text-sidebar-reverse"></i> Rodapé</h4>
            <div class="color-grid">
              <div class="color-item">
                <label>Fundo do Rodapé</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_footer_bg" value="${groupedSettings.colors?.find(s => s.key === 'color_footer_bg')?.value || '#0f172a'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_footer_bg')?.value || '#0f172a'}" class="color-text" data-for="color_footer_bg">
                </div>
              </div>
              <div class="color-item">
                <label>Texto do Rodapé</label>
                <div class="color-input-wrapper">
                  <input type="color" name="color_footer_text" value="${groupedSettings.colors?.find(s => s.key === 'color_footer_text')?.value || '#94a3b8'}" class="color-picker">
                  <input type="text" value="${groupedSettings.colors?.find(s => s.key === 'color_footer_text')?.value || '#94a3b8'}" class="color-text" data-for="color_footer_text">
                </div>
              </div>
            </div>
          </div>
          
          <!-- Paletas Prontas -->
          <div class="color-section">
            <h4><i class="bi bi-collection"></i> Paletas Prontas</h4>
            <p class="palette-hint">Clique em uma paleta para aplicar as cores automaticamente</p>
            <div class="preset-palettes">
              <!-- Fundo Branco -->
              <div class="palette-card" onclick="applyPalette('blue_white')">
                <div class="palette-colors">
                  <span style="background: #3b82f6" title="#3b82f6"></span>
                  <span style="background: #1e40af" title="#1e40af"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Azul Clássico</strong>
                  <small>#3b82f6 • Fundo Branco</small>
                </div>
              </div>
              
              <div class="palette-card" onclick="applyPalette('green_white')">
                <div class="palette-colors">
                  <span style="background: #10b981" title="#10b981"></span>
                  <span style="background: #047857" title="#047857"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Verde Natureza</strong>
                  <small>#10b981 • Fundo Branco</small>
                </div>
              </div>
              
              <div class="palette-card" onclick="applyPalette('orange_white')">
                <div class="palette-colors">
                  <span style="background: #f97316" title="#f97316"></span>
                  <span style="background: #c2410c" title="#c2410c"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Laranja Vibrante</strong>
                  <small>#f97316 • Fundo Branco</small>
                </div>
              </div>
              
              <div class="palette-card" onclick="applyPalette('red_white')">
                <div class="palette-colors">
                  <span style="background: #ef4444" title="#ef4444"></span>
                  <span style="background: #b91c1c" title="#b91c1c"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Vermelho Intenso</strong>
                  <small>#ef4444 • Fundo Branco</small>
                </div>
              </div>
              
              <div class="palette-card" onclick="applyPalette('purple_white')">
                <div class="palette-colors">
                  <span style="background: #8b5cf6" title="#8b5cf6"></span>
                  <span style="background: #6d28d9" title="#6d28d9"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Roxo Elegante</strong>
                  <small>#8b5cf6 • Fundo Branco</small>
                </div>
              </div>
              
              <div class="palette-card" onclick="applyPalette('pink_white')">
                <div class="palette-colors">
                  <span style="background: #ec4899" title="#ec4899"></span>
                  <span style="background: #be185d" title="#be185d"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Rosa Moderno</strong>
                  <small>#ec4899 • Fundo Branco</small>
                </div>
              </div>
              
              <div class="palette-card" onclick="applyPalette('cyan_white')">
                <div class="palette-colors">
                  <span style="background: #06b6d4" title="#06b6d4"></span>
                  <span style="background: #0891b2" title="#0891b2"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Ciano Fresh</strong>
                  <small>#06b6d4 • Fundo Branco</small>
                </div>
              </div>
              
              <div class="palette-card" onclick="applyPalette('indigo_white')">
                <div class="palette-colors">
                  <span style="background: #6366f1" title="#6366f1"></span>
                  <span style="background: #4338ca" title="#4338ca"></span>
                  <span style="background: #ffffff" title="#ffffff"></span>
                </div>
                <div class="palette-info">
                  <strong>Índigo Tech</strong>
                  <small>#6366f1 • Fundo Branco</small>
                </div>
              </div>
              
              <!-- Fundo Escuro -->
              <div class="palette-card dark" onclick="applyPalette('dark_blue')">
                <div class="palette-colors">
                  <span style="background: #60a5fa" title="#60a5fa"></span>
                  <span style="background: #3b82f6" title="#3b82f6"></span>
                  <span style="background: #0f172a" title="#0f172a"></span>
                </div>
                <div class="palette-info">
                  <strong>Azul Noturno</strong>
                  <small>#60a5fa • Fundo Escuro</small>
                </div>
              </div>
              
              <div class="palette-card dark" onclick="applyPalette('dark_green')">
                <div class="palette-colors">
                  <span style="background: #34d399" title="#34d399"></span>
                  <span style="background: #10b981" title="#10b981"></span>
                  <span style="background: #0f172a" title="#0f172a"></span>
                </div>
                <div class="palette-info">
                  <strong>Verde Neon</strong>
                  <small>#34d399 • Fundo Escuro</small>
                </div>
              </div>
              
              <div class="palette-card dark" onclick="applyPalette('dark_purple')">
                <div class="palette-colors">
                  <span style="background: #a78bfa" title="#a78bfa"></span>
                  <span style="background: #8b5cf6" title="#8b5cf6"></span>
                  <span style="background: #0f172a" title="#0f172a"></span>
                </div>
                <div class="palette-info">
                  <strong>Roxo Cyber</strong>
                  <small>#a78bfa • Fundo Escuro</small>
                </div>
              </div>
              
              <div class="palette-card dark" onclick="applyPalette('dark_red')">
                <div class="palette-colors">
                  <span style="background: #f87171" title="#f87171"></span>
                  <span style="background: #ef4444" title="#ef4444"></span>
                  <span style="background: #0f172a" title="#0f172a"></span>
                </div>
                <div class="palette-info">
                  <strong>Vermelho Dark</strong>
                  <small>#f87171 • Fundo Escuro</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Assistente de IA -->
      <div class="settings-card ai-card">
        <div class="card-header">
          <i class="bi bi-robot"></i>
          <span>Assistente de Inteligência Artificial</span>
          <span class="ai-badge">Beta</span>
        </div>
        <div class="card-body">
          <p class="ai-description">Configure a integração com a API Together AI para usar recursos de IA na criação de conteúdo.</p>
          
          <div class="form-group">
            <label>Chave da API Together AI</label>
            <input type="password" name="ai_api_key" value="${groupedSettings.ai?.find(s => s.key === 'ai_api_key')?.value || ''}" placeholder="Sua chave da API">
            <small>Obtenha sua chave em: <a href="https://api.together.xyz" target="_blank">https://api.together.xyz</a></small>
          </div>
          
          <div class="form-group">
            <label>URL da API Together AI</label>
            <input type="text" name="ai_api_url" value="${groupedSettings.ai?.find(s => s.key === 'ai_api_url')?.value || 'https://api.together.xyz/v1/chat/completions'}">
          </div>
          
          <div class="form-group">
            <label>Status do Assistente</label>
            <div class="toggle-group">
              <label class="toggle-option ${groupedSettings.ai?.find(s => s.key === 'ai_enabled')?.value === 'true' ? 'active' : ''}">
                <input type="radio" name="ai_enabled" value="true" ${groupedSettings.ai?.find(s => s.key === 'ai_enabled')?.value === 'true' ? 'checked' : ''}>
                <i class="bi bi-check-circle"></i> Ativado
              </label>
              <label class="toggle-option ${groupedSettings.ai?.find(s => s.key === 'ai_enabled')?.value !== 'true' ? 'active' : ''}">
                <input type="radio" name="ai_enabled" value="false" ${groupedSettings.ai?.find(s => s.key === 'ai_enabled')?.value !== 'true' ? 'checked' : ''}>
                <i class="bi bi-x-circle"></i> Desativado
              </label>
            </div>
          </div>
          
          <div class="form-group">
            <label>Modelo de IA</label>
            <select name="ai_model">
